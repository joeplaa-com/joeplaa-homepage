{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "ES2020",
            "esnext.intl"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "typeRoots": [
            "src/types",
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "public",
        ".cache"
    ],
    "include": [
        "src/components",
        "src/typings/svg.d.ts"
    ]
}