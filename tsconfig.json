{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "target": "ES2020",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "keyofStringsOnly": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "lib": [
            "ES2020",
            "dom"
        ],
        "skipLibCheck": false
    },
    "include": [
        "**/*.ts", "**/*.tsx"
    ],
    "exclude": ["node_modules"],
}
